<Window
	x:Class="GridHelperSample.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:utils="clr-namespace:Mkvonarx.Utils.Wpf"
	Title="MainWindow">
	<Grid utils:GridHelper.Rows="Auto,*,100" utils:GridHelper.Columns="*,*(min=60),*(max=100)">
        <Label Grid.Row="0" Grid.Column="0" Content="0,0" Background="AntiqueWhite" />
		<Label Grid.Row="0" Grid.Column="1" Content="0,1" Background="Aqua" />
		<Label Grid.Row="0" Grid.Column="2" Content="0,2" Background="Azure" />
		<Label Grid.Row="1" Grid.Column="0" Content="1,0" Background="Beige" />
		<Label Grid.Row="1" Grid.Column="1" Content="1,1" Background="Bisque" />
		<Label Grid.Row="1" Grid.Column="2" Content="1,2" Background="Blue" />
		<Label Grid.Row="2" Grid.Column="0" Content="2,0" Background="BlueViolet" />
		<Label Grid.Row="2" Grid.Column="1" Content="2,1" Background="Brown" />
		<Label Grid.Row="2" Grid.Column="2" Content="2,2" Background="BurlyWood" />
	</Grid>
</Window>
